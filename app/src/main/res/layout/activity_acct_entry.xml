<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/entry_password"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/entry_id"
        android:layout_below="@+id/entry_id"
        android:textColor="#000"
        android:textSize="20sp"
        android:hint="Password!"
        app:bootstrapBrand="info"/>


    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/entry_id"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="76dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:hint="ID"
        app:bootstrapBrand="info"/>

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/entry_remarks"
        android:layout_width="295dp"
        android:layout_height="74dp"
        android:layout_alignStart="@+id/entry_password"
        android:layout_below="@+id/entry_password"
        android:background="@color/colorAliceblue"
        android:hint="備考"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:minLines="5"
        app:bootstrapBrand="info"/>


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/entry_button"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/entry_password"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="67dp"
        android:text="登録"
        app:bootstrapBrand="success"/>

    <ImageView
        android:id="@+id/entry_img"
        android:layout_width="58dp"
        android:layout_height="47dp" />
    <Spinner
        android:id="@+id/service_spinner"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" />
</RelativeLayout>